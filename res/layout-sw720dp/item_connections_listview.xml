<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp" >

    <ImageView
        android:id="@+id/connection_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/no_img" />

    <LinearLayout
        android:id="@+id/connection_info_container"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginRight="160dp"
        android:layout_toRightOf="@id/connection_img"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/connection_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/connection_name_example"
            android:textColor="@color/grey_3"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/connection_position_txt"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="2"
            android:text="@string/connection_position_example"
            android:textColor="@color/grey_3"
            android:textSize="23sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/connection_group_desc_txt"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="@string/connection_position_example"
            android:textColor="@color/grey_3"
            android:textSize="23sp"
            android:typeface="sans"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/connection_location_container"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/connection_distance_txt"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:drawableLeft="@drawable/ic_action_place_big"
            android:drawablePadding="7dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/connection_location_example"
            android:textColor="@color/grey_3"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/connection_friends_txt"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_action_person_big"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/connection_friend_count_example"
            android:textColor="@color/grey_3"
            android:textSize="22sp"
            android:typeface="sans" />
    </LinearLayout>

    <TextView
        android:id="@+id/connection_group_members_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/ic_action_person_big"
        android:drawablePadding="7dp"
        android:gravity="center_vertical"
        android:text="@string/connection_friend_count_example"
        android:textColor="@color/grey_3"
        android:textSize="23sp"
        android:typeface="sans"
        android:visibility="gone" />

    <TextView
        android:id="@+id/connection_hashtags_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/connection_img"
        android:layout_marginTop="20dp"
        android:text="@string/hashtags_example"
        android:textColor="@color/light_blue"
        android:textSize="23sp"
        android:typeface="sans" />

</RelativeLayout>