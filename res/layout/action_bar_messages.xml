<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/action_bar_menu_item_selector"
    android:clickable="true"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/messages_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:src="@drawable/ic_message" />

    <TextView
        android:id="@+id/messages_new_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/messages_img"
        android:layout_alignTop="@id/messages_img"
        android:layout_marginRight="3dp"
        android:background="@drawable/action_bar_new_messages_count"
        android:gravity="center"
        android:minWidth="17sp"
        android:paddingBottom="1dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="1dp"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>