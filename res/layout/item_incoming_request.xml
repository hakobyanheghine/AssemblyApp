<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/incoming_request_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@string/app_name"
        android:background="@drawable/no_img" />

    <TextView
        android:id="@+id/incoming_request_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/incoming_request_img"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/connection_name_example"
        android:textColor="@color/grey_3"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/incoming_request_check_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/incoming_request_cancel_img"
        android:background="@drawable/ic_check" />

    <ImageView
        android:id="@+id/incoming_request_cancel_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_cancel" />

</RelativeLayout>